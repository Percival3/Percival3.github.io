---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getRelativeLocaleUrl } from 'astro:i18n';
import {
  Mail,
  Github,
  Twitter,
  Linkedin,
  Instagram,
  MapPin,
  GraduationCap,
  ArrowRight,
  Calendar,
  BookOpen,
  Database,
  Download,
} from 'lucide-react';

export function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
    { params: { lang: 'ja' } },
  ];
}

const { lang } = Astro.params;

const latestPosts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const latestResearch = (await getCollection('research'))
  .filter((item) => !item.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const latestCreatives = (await getCollection('creatives'))
  .filter((item) => !item.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const translations = {
  zh: {
    pageTitle: '关于我',
    greeting: '你好，我是',
    name: '钟鹏辰',
    role: '学生 / 创作者',
    affiliation: '北京大学',
    location: '中国，北京',
    bio: '我关注技术与创意的交叉点，尤其是算法艺术、交互设计和新媒体叙事。代码对我来说不仅是工具，也是表达观点与情绪的语言。',
    sections: {
      interests: '兴趣方向',
      interestsList: ['创意编程与算法艺术', '自然语言处理', '交互设计与动画', '前沿 Web 技术'],
      recentCreatives: '最近创作',
      recentPosts: '最新博客',
      recentResearch: '最新研究',
      connect: '联系方式',
      connectDesc: '如果你对我的作品感兴趣，或想讨论合作，欢迎联系我。',
      viewAll: '查看全部',
      noContent: '内容即将上线',
    },
    email: '发邮件给我',
    cv: '下载简历',
    cvLink: '/cv-zh.pdf',
  },
  en: {
    pageTitle: 'About Me',
    greeting: "Hi, I'm",
    name: 'Zhong Pengchen',
    role: 'Student / Creator',
    affiliation: 'Peking University',
    location: 'Beijing, China',
    bio: 'I work at the intersection of technology and creative expression, with a focus on algorithmic art, interaction design, and new media storytelling.',
    sections: {
      interests: 'Interests',
      interestsList: ['Creative Coding & Algorithmic Art', 'Natural Language Processing', 'Interaction Design & Animation', 'Cutting-edge Web Technologies'],
      recentCreatives: 'Recent Creatives',
      recentPosts: 'Latest Posts',
      recentResearch: 'Latest Research',
      connect: 'Get in Touch',
      connectDesc: "If you're interested in my work or want to discuss collaborations, feel free to reach out.",
      viewAll: 'View All',
      noContent: 'Coming soon',
    },
    email: 'Email Me',
    cv: 'Download CV',
    cvLink: '/cv-en.pdf',
  },
  ja: {
    pageTitle: '私について',
    greeting: 'こんにちは、',
    name: '钟鹏辰',
    role: '学生 / クリエイター',
    affiliation: '北京大学',
    location: '中国・北京',
    bio: 'テクノロジーと創造表現の交差点で活動しています。アルゴリズムアート、インタラクションデザイン、新しいメディア表現に関心があります。',
    sections: {
      interests: '関心分野',
      interestsList: ['クリエイティブコーディング', '自然言語処理', 'インタラクションデザインとアニメーション', '先端 Web 技術'],
      recentCreatives: '最近の作品',
      recentPosts: '最新ブログ',
      recentResearch: '最新研究',
      connect: 'お問い合わせ',
      connectDesc: '作品やコラボレーションに関心があれば、気軽にご連絡ください。',
      viewAll: 'すべて見る',
      noContent: '近日公開',
    },
    email: 'メールを送る',
    cv: '履歴書をダウンロード',
    cvLink: '/cv-ja.pdf',
  },
};

const t = translations[lang as keyof typeof translations] || translations.zh;
const friendLinks = [
  {
    name: 'YM Blog',
    url: 'https://ymblog.vercel.app/',
  },
];

function formatDate(date: Date, locale: string): string {
  const localeMap = { zh: 'zh-CN', en: 'en-US', ja: 'ja-JP' };
  return date.toLocaleDateString(localeMap[locale as keyof typeof localeMap] || 'zh-CN', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<Layout title={t.pageTitle} lang={lang}>
  <div class="page-shell max-w-6xl">
    <div class="page-hero max-w-4xl mx-auto">
      <div class="page-hero-card">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8 md:gap-12">
        <div class="relative group flex-shrink-0">
          <div class="absolute -inset-2 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 rounded-full blur-lg opacity-50 group-hover:opacity-75 transition duration-500"></div>
          <img
            src="/self_oc.png"
            alt={t.name}
            class="relative w-36 h-36 md:w-44 md:h-44 rounded-full object-cover border-4 border-white dark:border-gray-950 shadow-2xl"
          />
        </div>

        <div class="text-center md:text-left flex-1">
          <p class="text-xs uppercase tracking-[0.26em] text-[var(--adaptive-text-muted)] dark:text-[#8fc6e8] mb-2">{t.greeting}</p>
          <h1
            class:list={[
              'page-title mb-3',
              lang === 'en' ? 'text-3xl md:text-4xl leading-[1.15]' : 'text-4xl md:text-5xl',
            ]}
          >
            {t.name}
          </h1>
          <p class="text-[var(--adaptive-text-strong)] dark:text-[#9ecfe9] font-semibold text-lg mb-2">{t.role}</p>
          <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 text-sm text-[var(--adaptive-text-muted)] dark:text-[#a1cde6] mb-6">
            <span class="inline-flex items-center gap-1.5">
              <GraduationCap className="w-4 h-4" />
              {t.affiliation}
            </span>
            <span class="inline-flex items-center gap-1.5">
              <MapPin className="w-4 h-4" />
              {t.location}
            </span>
          </div>
          <p class="page-subtitle leading-relaxed max-w-xl">{t.bio}</p>
          </div>
        </div>
      </div>
    </div>

    <section class="mb-14">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl md:text-3xl font-bold page-section-title">{t.sections.recentCreatives}</h2>
        <a
          href={getRelativeLocaleUrl(lang, 'gallery')}
          class="inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:gap-2.5 transition-all"
        >
          {t.sections.viewAll}
          <ArrowRight className="w-4 h-4" />
        </a>
      </div>

      {latestCreatives.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
          {latestCreatives.map((item) => {
            const itemUrl = getRelativeLocaleUrl(lang, `gallery/${item.id.replace(/\.mdx?$/, '')}`);
            const previewSrc = item.data.previewImage || item.data.heroImage;

            return (
              <a href={itemUrl} class="group block">
                <article class="relative page-card rounded-2xl overflow-hidden border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/10">
                  <div class="relative aspect-[4/3] overflow-hidden bg-gray-100 dark:bg-gray-800">
                    {previewSrc ? (
                      <img
                        src={previewSrc}
                        alt={item.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-600">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    )}
                  </div>
                  <div class="p-4">
                    <h3 class="text-base font-bold mb-1 text-[var(--adaptive-text-strong)] dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-1">
                      {item.data.title}
                    </h3>
                    <p class="text-sm text-[var(--adaptive-text-body)] dark:text-gray-400 line-clamp-2">{item.data.description}</p>
                  </div>
                </article>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="page-empty">
          <p>{t.sections.noContent}</p>
        </div>
      )}
    </section>

    <section class="mb-14 max-w-4xl mx-auto">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl md:text-3xl font-bold page-section-title">{t.sections.recentPosts}</h2>
        <a
          href={getRelativeLocaleUrl(lang, 'blog')}
          class="inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:gap-2.5 transition-all"
        >
          {t.sections.viewAll}
          <ArrowRight className="w-4 h-4" />
        </a>
      </div>

      {latestPosts.length > 0 ? (
        <div class="space-y-4">
          {latestPosts.map((post) => {
            const postUrl = getRelativeLocaleUrl(lang, `blog/${post.id.replace(/\.mdx?$/, '')}`);
            return (
              <a href={postUrl} class="group block">
                <article class="page-card rounded-xl p-5 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/10">
                  <div class="flex items-start justify-between gap-4">
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg font-bold mb-1 text-[var(--adaptive-text-strong)] dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors truncate">
                        {post.data.title}
                      </h3>
                      <p class="text-sm text-[var(--adaptive-text-body)] dark:text-gray-400 line-clamp-1 mb-2">{post.data.description}</p>
                      <div class="flex items-center gap-3 text-xs text-[var(--adaptive-text-soft)] dark:text-gray-500">
                        <div class="flex items-center gap-1">
                          <Calendar className="w-3.5 h-3.5" />
                          <time datetime={post.data.pubDate.toISOString()}>{formatDate(post.data.pubDate, lang)}</time>
                        </div>
                        {post.data.tags && post.data.tags.length > 0 && (
                          <div class="flex gap-1.5">
                            {post.data.tags.slice(0, 2).map((tag) => (
                              <span class="px-2 py-0.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full">
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                    <ArrowRight className="w-5 h-5 text-[var(--adaptive-text-soft)] group-hover:text-blue-600 dark:group-hover:text-blue-400 group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" />
                  </div>
                </article>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="page-empty">
          <p>{t.sections.noContent}</p>
        </div>
      )}
    </section>

    <section class="mb-16 max-w-4xl mx-auto">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl md:text-3xl font-bold page-section-title">{t.sections.recentResearch}</h2>
        <a
          href={getRelativeLocaleUrl(lang, 'research')}
          class="inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 dark:text-blue-400 hover:gap-2.5 transition-all"
        >
          {t.sections.viewAll}
          <ArrowRight className="w-4 h-4" />
        </a>
      </div>

      {latestResearch.length > 0 ? (
        <div class="space-y-4">
          {latestResearch.map((item) => {
            const itemUrl = getRelativeLocaleUrl(lang, `research/${item.id.replace(/\.mdx?$/, '')}`);
            const isPaper = item.data.type === 'paper';

            return (
              <a href={itemUrl} class="group block">
                <article class="page-card rounded-xl p-5 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/10">
                  <div class="flex items-start gap-4">
                    <div class={`flex-shrink-0 w-9 h-9 rounded-lg flex items-center justify-center ${isPaper ? 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400' : 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400'}`}>
                      {isPaper ? <BookOpen className="w-4 h-4" /> : <Database className="w-4 h-4" />}
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg font-bold mb-1 text-[var(--adaptive-text-strong)] dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        {item.data.title}
                      </h3>
                      <p class="text-sm text-[var(--adaptive-text-body)] dark:text-gray-400 line-clamp-1 mb-2">{item.data.description}</p>
                      <div class="flex items-center gap-3 text-xs text-[var(--adaptive-text-soft)] dark:text-gray-500">
                        {item.data.venue && <span class="font-medium text-blue-600 dark:text-blue-400">{item.data.venue}</span>}
                        <div class="flex items-center gap-1">
                          <Calendar className="w-3.5 h-3.5" />
                          <time datetime={item.data.pubDate.toISOString()}>{formatDate(item.data.pubDate, lang)}</time>
                        </div>
                      </div>
                    </div>
                    <ArrowRight className="w-5 h-5 text-[var(--adaptive-text-soft)] group-hover:text-blue-600 dark:group-hover:text-blue-400 group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" />
                  </div>
                </article>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="page-empty">
          <p>{t.sections.noContent}</p>
        </div>
      )}
    </section>

    <section class="max-w-4xl mx-auto">
      <div class="flex items-center gap-3 mb-4">
        <Mail className="w-6 h-6 text-blue-600 dark:text-blue-400" />
        <h2 class="text-2xl md:text-3xl font-bold page-section-title">{t.sections.connect}</h2>
      </div>
      <p class="text-[var(--adaptive-text-body)] dark:text-gray-400 mb-8">{t.sections.connectDesc}</p>

      <div class="flex flex-col sm:flex-row items-center gap-4 mb-8">
        <a
          href="mailto:contact@example.com"
          class="flex items-center justify-center gap-2 px-8 py-3.5 rounded-full !bg-black !text-white hover:opacity-80 dark:!bg-white dark:!text-black transition-all shadow-xl font-bold tracking-wide"
        >
          <Mail className="w-4 h-4" />
          <span>{t.email}</span>
        </a>
        <a
          href={t.cvLink}
          class="flex items-center justify-center gap-2 px-8 py-3.5 rounded-full border border-current text-[var(--adaptive-text-strong)] dark:text-gray-100 hover:bg-black/5 dark:hover:bg-white/10 transition-all font-bold tracking-wide"
        >
          <Download className="w-4 h-4" />
          <span>{t.cv}</span>
        </a>
      </div>

      <div class="flex items-center gap-6 text-[var(--adaptive-text-soft)] justify-center sm:justify-start">
        <a href="https://github.com" target="_blank" aria-label="GitHub" class="hover:text-[var(--adaptive-text-strong)] dark:hover:text-white transition-colors transform hover:scale-110">
          <Github className="w-6 h-6" />
        </a>
        <a href="https://twitter.com" target="_blank" aria-label="Twitter" class="hover:text-blue-400 transition-colors transform hover:scale-110">
          <Twitter className="w-6 h-6" />
        </a>
        <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn" class="hover:text-blue-700 transition-colors transform hover:scale-110">
          <Linkedin className="w-6 h-6" />
        </a>
        <a href="https://instagram.com" target="_blank" aria-label="Instagram" class="hover:text-pink-500 transition-colors transform hover:scale-110">
          <Instagram className="w-6 h-6" />
        </a>
      </div>
    </section>

    <section class="mt-14 max-w-4xl mx-auto">
      <div class="flex items-center gap-3 mb-4">
        <h2 class="text-2xl md:text-3xl font-bold page-section-title">友情链接</h2>
      </div>
      <p class="text-[var(--adaptive-text-body)] dark:text-gray-400 mb-5">推荐站点</p>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
        {friendLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group page-card rounded-2xl border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 aspect-square px-4 py-5 flex flex-col items-center justify-center text-center"
          >
            <span class="text-[var(--adaptive-text-strong)] dark:text-gray-100 font-semibold text-base leading-tight">
              {link.name}
            </span>
            <span class="mt-3 inline-flex items-center gap-1.5 text-sm text-[var(--adaptive-text-soft)] dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              访问
              <ArrowRight className="w-3.5 h-3.5 group-hover:translate-x-0.5 transition-transform" />
            </span>
          </a>
        ))}
      </div>
    </section>
  </div>
</Layout>
