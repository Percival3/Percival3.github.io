---
import Layout from '../../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { ArrowLeft, Tag, ExternalLink, Code } from 'lucide-react';
import { getRelativeLocaleUrl } from 'astro:i18n';

export async function getStaticPaths() {
  const allCreatives = await getCollection('creatives');

  const paths = [];
  const langs = ['zh', 'en', 'ja'];

  for (const item of allCreatives) {
    for (const lang of langs) {
      paths.push({
        params: {
          lang,
          slug: item.id.replace(/\.mdx?$/, ''),
        },
        props: { item },
      });
    }
  }

  return paths;
}

const { item } = Astro.props;
const { lang } = Astro.params;

const { Content } = await render(item);

type CreativeCategory = 'social-observation' | 'anime' | 'other';

const categoryKey = (item.data.category ?? 'other') as CreativeCategory;

const textByLang = {
  zh: {
    back: '返回作品集',
    tags: '标签',
    category: '分类',
    demo: '在线演示',
    categories: {
      'social-observation': '社会观察',
      anime: '动漫',
      other: '其他专题',
    },
  },
  en: {
    back: 'Back to Gallery',
    tags: 'Tags',
    category: 'Category',
    demo: 'Live Demo',
    categories: {
      'social-observation': 'Social Observation',
      anime: 'Anime',
      other: 'Other Topics',
    },
  },
  ja: {
    back: 'ギャラリーに戻る',
    tags: 'タグ',
    category: 'カテゴリ',
    demo: 'デモを見る',
    categories: {
      'social-observation': '社会観察',
      anime: 'アニメ',
      other: 'その他',
    },
  },
};

const t = textByLang[lang as keyof typeof textByLang] || textByLang.en;

const categoryTone: Record<CreativeCategory, string> = {
  'social-observation': 'border border-white/28 dark:border-cyan-200/30 bg-slate-900/52 dark:bg-cyan-950/48 text-[#f5ead9] dark:text-cyan-100',
  anime: 'border border-pink-200/45 dark:border-fuchsia-200/36 bg-pink-950/42 dark:bg-fuchsia-950/42 text-[#ffe4f4] dark:text-[#ffd7f2]',
  other: 'border border-white/26 dark:border-cyan-200/22 bg-slate-900/46 dark:bg-slate-900/46 text-[#f2e8d8] dark:text-[#d6e7f6]',
};
---

<Layout title={item.data.title} lang={lang}>
  <article class="page-shell max-w-4xl md:py-16">
    <a
      href={getRelativeLocaleUrl(lang, 'gallery')}
      class="glass-chip inline-flex items-center gap-2 px-4 py-2 rounded-full text-[var(--adaptive-text-muted)] dark:text-[#bfe6ff] hover:gap-3 transition-all mb-8 group"
    >
      <ArrowLeft className="w-4 h-4 group-hover:-translate-x-1 transition-transform" />
      <span>{t.back}</span>
    </a>

    <header class="page-hero md:mb-12">
      <div class="page-hero-card text-left">
      {(item.data.previewImage || item.data.heroImage) && (
        <img
          src={item.data.previewImage || item.data.heroImage}
          alt={item.data.title}
          class="w-full h-52 sm:h-64 md:h-96 object-cover rounded-2xl mb-8 shadow-2xl"
        />
      )}

      <div class="mb-4">
        <span class={`glass-chip inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold ${categoryTone[categoryKey]}`}>
          {t.categories[categoryKey]}
        </span>
      </div>

      <h1 class="page-title text-3xl md:text-5xl mb-6 leading-tight">
        {item.data.title}
      </h1>

      {item.data.description && (
        <p class="page-subtitle text-lg md:text-xl mb-6 leading-relaxed">
          {item.data.description}
        </p>
      )}

      <div class="flex flex-wrap items-center gap-3 mb-6">
        <span class={`inline-flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium ${categoryTone[categoryKey]}`}>
          <span>{t.category}:</span>
          <span>{t.categories[categoryKey]}</span>
        </span>

        {item.data.techStack && item.data.techStack.length > 0 && (
          <div class="flex items-center gap-2 flex-wrap">
            <Code className="w-4 h-4 text-slate-700 dark:text-cyan-200" />
            {item.data.techStack.map((tech) => (
              <span class="px-3 py-1 text-xs font-semibold rounded-lg border border-white/28 dark:border-cyan-200/30 bg-slate-900/52 dark:bg-cyan-950/48 text-[#f5ead9] dark:text-cyan-100 backdrop-blur-sm shadow-[0_8px_18px_rgba(15,23,42,0.26)]">
                {tech}
              </span>
            ))}
          </div>
        )}

        {item.data.demoUrl && (
          <a
            href={item.data.demoUrl}
            target="_blank"
            class="inline-flex w-full sm:w-auto items-center justify-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium"
          >
            {t.demo}
            <ExternalLink className="w-3 h-3" />
          </a>
        )}
      </div>

        {item.data.tags && item.data.tags.length > 0 && (
          <div>
            <div class="flex items-center gap-2 mb-3 text-sm text-[var(--adaptive-text-muted)] dark:text-gray-400">
            <Tag className="w-4 h-4" />
            <span>{t.tags}</span>
          </div>
            <div class="flex flex-wrap gap-2">
              {item.data.tags.map((tag) => (
                <span class="accent-chip px-4 py-1.5 text-sm font-medium rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        )}

      <hr class="mt-8 border-white/25 dark:border-cyan-200/18" />
      </div>
    </header>

    <div class="page-card rounded-3xl p-6 md:p-10">
      <div class="prose prose-lg dark:prose-invert max-w-none article-prose
                prose-headings:font-bold
                prose-h1:text-4xl prose-h1:mb-4 prose-h1:mt-8
                prose-h2:text-3xl prose-h2:mb-3 prose-h2:mt-6
                prose-h3:text-2xl prose-h3:mb-2 prose-h3:mt-4
                prose-p:leading-relaxed
                prose-a:no-underline hover:prose-a:underline
                prose-code:text-pink-600 dark:prose-code:text-pink-400 prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:font-mono prose-code:text-sm prose-code:before:content-[''] prose-code:after:content-['']
                prose-pre:bg-gray-900 dark:prose-pre:bg-gray-950 prose-pre:text-gray-100 prose-pre:shadow-xl prose-pre:rounded-xl
                prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-blue-50 dark:prose-blockquote:bg-blue-900/20 prose-blockquote:py-2 prose-blockquote:px-4 prose-blockquote:italic
                prose-img:rounded-xl prose-img:shadow-lg prose-img:my-8
                prose-ul:my-4 prose-ol:my-4
                animate-in fade-in slide-in-from-bottom-4 duration-700">
        <Content />
      </div>
    </div>

    <hr class="mt-12 border-white/20 dark:border-cyan-200/16" />

    <div class="mt-8 text-center">
      <a
        href={getRelativeLocaleUrl(lang, 'gallery')}
        class="glass-chip inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full text-[var(--adaptive-text-muted)] dark:text-[#c7ebff] hover:opacity-85 transition-opacity font-medium"
      >
        <ArrowLeft className="w-4 h-4" />
        <span>{t.back}</span>
      </a>
    </div>
  </article>
</Layout>

<style>
  :global(pre) {
    padding: 1.5rem !important;
    overflow-x: auto;
  }

  :global(pre code) {
    background: transparent !important;
    padding: 0 !important;
  }

  :global(.prose img) {
    max-width: 100%;
    height: auto;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    :global(.prose) {
      font-size: 1rem;
    }

    :global(.prose h1) {
      font-size: 2rem;
    }

    :global(.prose h2) {
      font-size: 1.5rem;
    }

    :global(.prose h3) {
      font-size: 1.25rem;
    }
  }
</style>
