---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getRelativeLocaleUrl } from 'astro:i18n';

export async function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
    { params: { lang: 'ja' } },
  ];
}

const { lang } = Astro.params;

type CreativeCategory = 'social-observation' | 'anime' | 'other';

const categoryOrder: CreativeCategory[] = ['social-observation', 'anime', 'other'];

const allCreatives = await getCollection('creatives');
const published = allCreatives
  .filter((item) => !item.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const byCategory: Record<CreativeCategory, typeof published> = {
  'social-observation': [],
  anime: [],
  other: [],
};

for (const item of published) {
  const key = (item.data.category ?? 'other') as CreativeCategory;
  byCategory[key].push(item);
}

const texts = {
  zh: {
    pageTitle: '作品集',
    title: '作品集',
    subtitle: '创意编程、社会观察与动画专题',
    noItems: '暂无作品',
    noItemsInCategory: '该专题暂时没有作品。',
    categories: {
      'social-observation': '社会观察',
      anime: '动漫',
      other: '其他专题',
    },
  },
  en: {
    pageTitle: 'Gallery',
    title: 'Gallery',
    subtitle: 'Creative coding, social themes, and animation projects',
    noItems: 'No works yet',
    noItemsInCategory: 'No works in this topic yet.',
    categories: {
      'social-observation': 'Social Observation',
      anime: 'Anime',
      other: 'Other Topics',
    },
  },
  ja: {
    pageTitle: 'ギャラリー',
    title: 'ギャラリー',
    subtitle: 'クリエイティブコーディング・社会観察・アニメ特集',
    noItems: 'まだ作品がありません',
    noItemsInCategory: 'この特集にはまだ作品がありません。',
    categories: {
      'social-observation': '社会観察',
      anime: 'アニメ',
      other: 'その他',
    },
  },
};

const t = texts[lang as keyof typeof texts] || texts.en;

const categoryTone: Record<CreativeCategory, string> = {
  'social-observation': 'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300',
  anime: 'bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300',
  other: 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300',
};
---

<Layout title={t.pageTitle} lang={lang}>
  <div class="page-shell max-w-6xl">
    <div class="page-hero">
      <div class="page-hero-card">
        <h1 class="page-title">{t.title}</h1>
        <p class="page-subtitle">{t.subtitle}</p>
      </div>
    </div>

    {published.length > 0 ? (
      <>
        <div class="flex flex-wrap items-center justify-center gap-3 mb-10">
          {categoryOrder.map((category) => (
            <span class={`glass-chip inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium ${categoryTone[category]}`}>
              <span>{t.categories[category]}</span>
              <span class="opacity-70">({byCategory[category].length})</span>
            </span>
          ))}
        </div>

        <div class="space-y-12">
          {categoryOrder.map((category) => {
            const items = byCategory[category];
            return (
              <section>
                <div class="flex items-center justify-between mb-5">
                  <h2 class="text-2xl md:text-3xl font-bold page-section-title">
                    {t.categories[category]}
                  </h2>
                  <span class={`glass-chip px-3 py-1 rounded-full text-xs font-semibold ${categoryTone[category]}`}>
                    {items.length}
                  </span>
                </div>

                {items.length > 0 ? (
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {items.map((item) => {
                      const itemUrl = getRelativeLocaleUrl(lang, `gallery/${item.id.replace(/\.mdx?$/, '')}`);
                      const previewSrc = item.data.previewImage || item.data.heroImage;

                      return (
                        <a href={itemUrl} class="group block">
                          <article class="relative page-card overflow-hidden hover:shadow-xl hover:shadow-blue-500/10">
                            <div class="relative aspect-[16/10] overflow-hidden bg-gray-100 dark:bg-gray-800">
                              {previewSrc ? (
                                <img
                                  src={previewSrc}
                                  alt={item.data.title}
                                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                />
                              ) : (
                                <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-600">
                                  <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                  </svg>
                                </div>
                              )}

                              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                                {item.data.techStack && item.data.techStack.length > 0 && (
                                  <div class="flex flex-wrap gap-1.5">
                                    {item.data.techStack.map((tech) => (
                                      <span class="px-2 py-0.5 text-xs font-medium bg-white/20 backdrop-blur-sm text-white rounded">
                                        {tech}
                                      </span>
                                    ))}
                                  </div>
                                )}
                              </div>
                            </div>

                            <div class="p-5">
                              <div class="mb-2">
                                <span class={`inline-flex px-2.5 py-1 text-xs font-semibold rounded-full ${categoryTone[category]}`}>
                                  {t.categories[category]}
                                </span>
                              </div>
                              <h3 class="text-lg font-bold mb-2 text-[var(--adaptive-text-strong)] dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                {item.data.title}
                              </h3>
                              <p class="text-sm text-[var(--adaptive-text-body)] dark:text-gray-400 line-clamp-2 mb-3">
                                {item.data.description}
                              </p>

                              {item.data.tags && item.data.tags.length > 0 && (
                                <div class="flex flex-wrap gap-1.5">
                                  {item.data.tags.map((tag) => (
                                    <span class="px-2 py-0.5 text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full">
                                      {tag}
                                    </span>
                                  ))}
                                </div>
                              )}
                            </div>
                          </article>
                        </a>
                      );
                    })}
                  </div>
                ) : (
                  <div class="page-empty text-sm">
                    {t.noItemsInCategory}
                  </div>
                )}
              </section>
            );
          })}
        </div>
      </>
    ) : (
      <div class="page-empty">
        <p class="text-xl">{t.noItems}</p>
      </div>
    )}
  </div>
</Layout>
