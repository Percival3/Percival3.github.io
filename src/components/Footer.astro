---
// src/components/Footer.astro
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const year = new Date().getFullYear();

const footerText = {
  zh: "构建于 Astro v5 & Tailwind v4",
  en: "Built with Astro v5 & Tailwind v4",
  ja: "Astro v5 & Tailwind v4 で構築",
};
---

<footer class="relative z-10 py-6 sm:py-8 mt-auto border-t border-gray-200/50 dark:border-gray-800/50 bg-white/22 dark:bg-slate-950/26 backdrop-blur-md text-center">
  <div class="container mx-auto px-4">
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
      &copy; {year} Zhong Pengchen. All rights reserved.
    </p>
    <p class="text-xs text-gray-400 dark:text-gray-600">
      {footerText[lang as keyof typeof footerText]}
    </p>
  </div>
</footer>
